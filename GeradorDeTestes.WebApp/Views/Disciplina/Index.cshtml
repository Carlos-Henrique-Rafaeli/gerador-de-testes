@using GeradorDeTestes.WebApp.Extensions
@model VisualizarDisciplinasViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Disciplinas";

    var notificacao = ViewData[nameof(NotificacaoViewModel)] as NotificacaoViewModel;
}

<p>
    <a class="btn btn-primary px-4" href="/disciplinas/cadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr />

@if (notificacao is not null)
{
    <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
        <h6>@notificacao.Titulo</h6>
        @notificacao.Mensagem
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.Registros)
    {
        <div class="col-12 col-md-3">
            <div class="card">
                <div class="card-body">
                    <p class="card-text"><span class="fw-semibold">Id:</span> @item.Id</p>
                    <p class="card-text"><span class="fw-semibold">Nome:</span> @item.Nome</p>
            
                    <span class="d-flex gap-1 justify-content-end mt-4">
                        <a href="/disciplinas/editar/@item.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/disciplinas/excluir/@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>