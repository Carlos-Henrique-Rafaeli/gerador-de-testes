@model VisualizarQuestaoViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Questões";
}

<p>
    <a class="btn btn-primary px-4" href="/questoes/cadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.Registros)
    {
        <div class="col-12 col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Matéria: @item.Enunciado</h5>
                    <p class="card-text"><span class="fw-semibold">Matéria:</span> @item.Materia</p>

                    <span class="d-flex gap-1 justify-content-end mt-4">
                        <a href="/questoes/detalhes/@item.Id" class="btn btn-secondary">
                            <i class="bi bi-search"></i>
                        </a>
                        <a href="/questoes/editar/@item.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/questoes/excluir/@item.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>