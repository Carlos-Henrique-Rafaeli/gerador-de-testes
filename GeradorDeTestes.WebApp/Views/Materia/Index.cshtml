@using GeradorDeTestes.Dominio.Extensions
@model VisualizarMateriasViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Materias";

    var notificacao = ViewData[nameof(NotificacaoViewModel)] as NotificacaoViewModel;
}

<p>
    <a class="btn btn-primary px-4" href="/materias/cadastrar" data-se="btnCadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr />

@if (notificacao is not null)
{
    <div class="alert alert-danger alert-dismissible fade show my-3" role="alert">
        <h6>@notificacao.Titulo</h6>
        @notificacao.Mensagem
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.Registros)
    {
        <div class="col-12 col-md-3">
            <div class="card">
                <div class="card-body">
                    <p class="card-text"><span class="fw-semibold">Nome:</span> @item.Nome</p>
                    <p class="card-text"><span class="fw-semibold">Disciplina:</span> @item.Disciplina</p>
                    <p class="card-text"><span class="fw-semibold">Serie:</span> @item.Serie.GetDisplayName()</p>

                    <span class="d-flex gap-1 justify-content-end mt-4">
                        <a href="/materias/editar/@item.Id" class="btn btn-primary" title="Edição">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/materias/excluir/@item.Id" class="btn btn-danger" title="Exclusão">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>